<%- include('../partials/nav') %>

<main>
  <h1>Add a New Dog</h1> 
  <form action="/dogs" method="POST">
    <label>Name:
      <input type="text" name="name">
    </label><br>
    <label>Approachability:
      <select name="approach" id="approach-select">
        <option value="approach freely">free to approach</option>
        <option value="approach with caution">approach with caution</option>
        <option value="do not approach">do not approach</option>
      </select>
    </label><br>
    <label>
      Leashed: 
      <input 
      type="checkbox" 
      name="leash" 
      checked 
      />
    <button type="submit">Add Dog</button>
  </form>
</main>


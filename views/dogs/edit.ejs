<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit the Dog! 🐶/h1>
  <form action="/dogs/<%= dog._id %>?_method=PUT" method="POST">
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= dog.name %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Leashed: 
      <input 
      type="checkbox" 
      name="leash" 
      <%= dog.leash ? "checked" : "" %> 
      >
    </label>
    <label>
      Location: 
      <input 
        type="text"
        name="command" 
        value="<%= dog.location %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Owner: 
      <input 
        type="text"
        name="master" 
        value="<%= dog.owner.name %> " 
        autocomplete="off"
      >
    <label>
      Command: 
      <input 
        type="text"
        name="command" 
        value="<%= dog.command %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Lost?
      <input 
        type="checkbox" 
        name="lost" 
				<%= dog.lost ? "checked" : "" %> 
      >
    </label>
    <button type="submit">Edit the 🐕</button>
  </form>
</section>

<%- include('../partials/footer') %>
<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Dogs! </h1>
  <% if (user) { %>
    <a href="/dogs/new">Add Dog</a> 
  <% } %>  
  <h2>All the Dogs!</h2>
	<ul>
  <% dogs.forEach(dog => { %>
    <li>🐕<%= dog.name %></li>
    <li><%= dog.approach %></li>
    <li><%= dog.location %></li>
    <li><%= dog.command %></li>
    <a href="/dogs/<%= dog._id %>">View dog.name</a>
  <% }) %>
  </ul>
</section>

<%- include('../partials/footer') %>
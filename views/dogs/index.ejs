<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<div class="container">
  <section>
    <h1 class='text-center mt-5'>Dogs!</h1>
    <div class="row">
      <div class="col text-center mb-5">
        <% if (user) { %>
          <a href="/dogs/new">Add Dog</a> 
        <% } %> 
      </div> 
    </div>
	 
    <% dogs.forEach(dog => { %>
    <div class="row"> 
      <div class="col">
        <div class="card mb-5" id="dog-cards">
          <li class="card-header font-weight-bold">üêï <%= dog.name %></li>
          <div class="card-body">
            <li class="list-group-item"><%= dog.approach %></li>
            <li class="list-group-item"><%= dog.name %> is <%= dog.leash ? 'leashed!   ü¶Æ' : 'off leash! üéâ'%></li>
            <li class="list-group-item"><%= dog.location %></li>
            <% if (dog.lost === true) { %>
              <li class="list-group-item"><%= dog.name %> is  <%= dog.lost ? 'lost! ü•∫' : 'found! üéâ'%></li>
              <li class="list-group-item"><%= dog.command %></li>
            <% } %>
          </div>
          <a class="card-footer text-right" href="/dogs/<%= dog._id %>">View Profile</a>
        </div>
      </div>
    </div>
    <% }) %>
   
  </section>
</div>

<%- include('../partials/footer') %>